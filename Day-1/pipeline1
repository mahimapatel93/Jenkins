pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mahimapatel93/Terraform_Practice.git'
            }
        }

        stage('terraform init') {
            steps {
                dir('Day-2-tfvars'){
                sh 'terraform init'
            }
        }
        }

        stage('terraform plan') {
            steps {
                dir('Day-2-tfvars'){
                sh 'terraform plan'
            }
        }
        }

        stage('terraform apply') {
            steps {
                dir('Day-2-tfvars'){
                sh 'terraform apply -auto-approve'
            }
            }
        }
    }
}
